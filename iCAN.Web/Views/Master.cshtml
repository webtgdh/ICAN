@using iCAN.Core.ExtensionMethods
@inherits UmbracoViewPage<IPublishedContent>
@{
    Layout = null;
    var pageScope = "s-" + Model.DocumentTypeAlias.ConvertToId();
}

<!doctype html>
<html lang="en-GB" class="no-js no-enhance @pageScope">
    <head itemscope itemtype="http://schema.org/WebSite">
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        @Html.Partial("~/Views/Partials/Meta/SEO.cshtml")

        <script src="/assets/js/head.js"></script>
        <!--<meta name="theme-color" content="#000000">-->
		<link rel="shortcut icon" href="/img/favicons/favicon-96x96.png" type="image/png">
		<link rel="manifest" href="/manifest.json" />
		<link rel="stylesheet" href="/css/Temp.css" />
    </head>
    <body class="o-page">
		<a href="#main" class="c-button c-button--skiplink">Skip to main content</a>
        @Html.Partial("~/Views/Partials/Modules/Header.cshtml")
        @RenderBody()
		@Html.Partial("Modules/Footer")
        @Html.Partial("Meta/Analytics")
    </body>
</html>